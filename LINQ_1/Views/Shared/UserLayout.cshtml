@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>UserLayout</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .navbar-brand img {
            width: 30px;
        }

        .navbar-nav .nav-link {
            font-weight: bold;
            color: #333 !important;
            transition: color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important;
            }

        .dropdown-menu a {
            color: #333;
            display: flex;
            align-items: center;
        }

            .dropdown-menu a img {
                width: 20px;
                margin-right: 10px;
            }

        .list-group-item {
            border: none;
            background-color: #f8f9fa;
        }

            .list-group-item a {
                font-weight: 500;
                color: #333;
                text-decoration: none;
            }

        .carousel-inner img {
            height: 400px;
            object-fit: cover;
        }

        .search-bar {
            display: flex;
            align-items: center;
            width: 250px;
        }

            .search-bar input {
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
                border-right: 0;
            }

            .search-bar button {
                background: none;
                border: none;
                padding: 5px;
            }

        .footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
            font-size: 14px;
        }

            .footer a {
                color: #ffffff;
                text-decoration: underline;
            }
        .navbar-brand img {
            width: 150px;
            height: auto;
            padding: 5px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.1);
            }

        .navbar {
            padding: 10px 20px;
        }

        .navbar-nav .nav-item {
            margin-left: 20px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm p-3 mb-5 bg-white rounded">
        <a class="navbar-brand" href="#"><img src="/Images/meow.jpg" alt="Logo" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("Trang chủ", "DanhSachSach", "Sach", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Đăng Ký", "DangKy", "NguoiDung", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Đăng Nhập", "DangNhap", "NguoiDung", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Liên Hệ", "LienHe", "Paper", null, new { @class = "nav-link" })</li>
                <li class="nav-item"><a href="@Url.Action("GioHang", "GioHang")" class="nav-link">Giỏ hàng</a></li>
            </ul>
            <div class="search-bar ml-3">
                <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                <button type="submit"><img src="/Images/search.JPG" alt="Search" /></button>
            </div>
            <ul class="navbar-nav ml-3">
                <li class="nav-item dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown">Languages</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#"><img src="/Images/VietNamFlag.JPG" /> Vietnamese</a>
                        <a class="dropdown-item" href="#"><img src="/Images/EnglishFlag.JPG" /> English</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm not-include">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-primary text-white font-weight-bold">Chủ Đề Sách</li>
                        @Html.Action("ChuDePartial", "ChuDe")
                    </ul>
                </div>
                <div class="card shadow-sm mt-4 not-include">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-primary text-white font-weight-bold">Nhà Xuất Bản</li>
                        @Html.Action("NhaXuatBanPartial", "NhaXuatBan")
                    </ul>
                </div>
            </div>

            <!-- Carousel and Main Body -->
            <div class="col-md-9">
                <div id="carouselExampleControls" class="carousel slide shadow-sm mb-4" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Images/Anh1.png" class="d-block w-100" alt="Ảnh 1" />
                        </div>
                        <div class="carousel-item">
                            <img src="/Images/Anh2.png" class="d-block w-100" alt="Ảnh 2" />
                        </div>
                        <div class="carousel-item">
                            <img src="/Images/Anh3.png" class="d-block w-100" alt="Ảnh 3" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="content p-4 bg-white shadow-sm rounded">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container text-center">
            <p>BảnH</p>
        </div>
    </footer>
</body>
</html>
