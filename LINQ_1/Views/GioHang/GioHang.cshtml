
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using LINQ_1.Models;
@model List<GioHang>

<!DOCTYPE html>
<html>
<head>
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h2 {
            color: #333;
            font-size: 24px;
            margin-top: 20px;
        }

        .card:not(.not-include) {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .table {
            width: 100%;
            margin: 20px 0;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px 15px;
                border: 1px solid #ddd;
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #f9f9f9;
                color: #333;
                font-weight: bold;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table img {
                width: 50px;
                height: auto;
                border-radius: 4px;
                object-fit: cover;
            }

            .table tr:hover {
                background-color: #f1f8ff;
            }

            .table .total-row {
                font-weight: bold;
                background-color: lightyellow;
            }

                .table .total-row td {
                    font-size: 16px;
                    color: #333;
                }

            .table .total-quantity, .table .total-price {
                color: #007bff;
                font-weight: bold;
            }

    </style>
</head>
<body>

    <h2>Giỏ hàng</h2>
    <div class="card border-dark">
        <table class="table">
            <tr style="background-color: lightyellow">
                <th>MaSach</th>
                <th>TenSach</th>
                <th>AnhBia</th>
                <th>SoLuong</th>
                <th>DonGia</th>
                <th>ThanhTien</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSach</td>
                    <td>@item.TenSach</td>
                    <td><img src="~/HinhAnhSP/@item.AnhBia"></td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:0,0}", item.DonGia)</td>
                    <td>@String.Format("{0:0,0}", item.ThanhTien)</td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    Tổng cộng
                </td>
                <td>@ViewBag.TongSoLuong</td>
                <td></td>
                <td>@String.Format("{0:0,0}", ViewBag.TongThanhTien)</td>
            </tr>
        </table>
    </div>
</body>
</html>


